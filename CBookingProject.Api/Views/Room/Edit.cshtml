@model CBookingProject.API.Models.RoomViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Rooms</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RoomId" />

            <div class="form-group">
                <label asp-for="RoomName" class="control-label"></label>
                <input asp-for="RoomName" class="form-control" />
                <span asp-validation-for="RoomName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RoomTypeId" class="control-label"></label>
                <select asp-for="RoomTypeId" asp-items="Model.RoomTypes" class="form-control"></select>
                <span asp-validation-for="RoomTypeId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PeopleCapacity" class="control-label"></label>
                <input asp-for="PeopleCapacity" class="form-control" />
                <span asp-validation-for="PeopleCapacity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RoomQuantity" class="control-label"></label>
                <input asp-for="RoomQuantity" class="form-control" />
                <span asp-validation-for="RoomQuantity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RoomDescription" class="control-label"></label>
                <input asp-for="RoomDescription" class="form-control" />
                <span asp-validation-for="RoomDescription" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="form-check">
                    <input asp-for="Status" type="checkbox" class="form-check-input" />
                    <label asp-for="Status" class="form-check-label"></label>
                </div>
                <span asp-validation-for="Status" class="text-warning"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
