@model CBookingProject.WebAdmin.Models.RoomAvailabilityViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_ContentLayout.cshtml";
}

<h1>Edit</h1>

<h4>Rooms</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <input type="hidden" asp-for="AvailabilityId" />

            <partial name="_RoomAvailabilitiesForm" />

            <div class="form-group">
                <div class="form-check">
                    <input asp-for="Status" type="checkbox" class="form-check-input" />
                    <label asp-for="Status" class="form-check-label"></label>
                </div>
                <span asp-validation-for="Status" class="text-warning"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
